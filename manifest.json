{
  "manifest_version": 3,
  "name": "Highlight Popup",
  "version": "1.0",
  "permissions": ["activeTab", "storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"],
      "css": ["styles/styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "hello_extensions.png"
  }
}
